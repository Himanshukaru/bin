# Alias

# Because typing cd is too musch work
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Quick acces rc files
alias vimrc='vim ~/.vimrc'
alias zshrc='vim ~/.zshrc'

# For vim
alias v='vim'
alias vi='vim'

# Change to your last known directory
alias ocd='cd $OLDPWD $*'

# Easy shutdown
alias shut='sudo shutdown -hP now' 

# Easy mounting sda5 
alias tvmnt='sudo ntfs-3g /dev/sda5 /mnt' 

# Easy reaching tv series
alias cdtv='cd /mnt/TvSeries'

# edit torrc
alias torrc='sudo vim /etc/tor/torrc'

# credit tool
alias c='credit'
alias cn='credit new'
alias cu='credit update'
alias ct='credit total'
alias cts='credit totals'
alias cdis='credit display'
alias cprint='credit print'
alias cnet='credit net'
